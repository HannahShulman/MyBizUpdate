<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent">


        <TextView
            android:textSize="24sp"
            android:textColor="#000"
            android:alpha=".87"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:maxLines="2"
            android:minLines="2"
            android:lineSpacingExtra="7dp"
            android:id="@+id/text"
            android:text="@string/add_image_for_recog"/>



        <FrameLayout
            android:layout_centerHorizontal="true"
            android:id="@+id/frame_layout"
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha=".56"
            android:layout_below="@+id/text"
            android:layout_marginEnd="20dp"
            android:layout_alignEnd="@+id/offer_description"
            android:layout_marginBottom="30dp">


            <ImageView
                android:layout_gravity="center_vertical|center|center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_add_a_photo_black_36dp"
                android:id="@+id/profilePic"
                />

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/image_view"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_border"

                />
        </FrameLayout>

        <ImageView
            android:layout_below="@+id/text"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="25dp"
            android:id="@+id/profileImage"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"/>

        <Button
            android:gravity="center"
            android:id="@+id/take_pic_btn"
            android:layout_marginTop="37dp"
            android:layout_centerHorizontal="true"
            android:layout_width="210dp"
            android:layout_height="38dp"
            android:text="@string/take_pic_camara"
            android:background="@drawable/rounded_main_color_button"
            android:paddingTop="-10dp"
            android:paddingBottom="-10dp"
            android:layout_below="@+id/frame_layout"
            android:textColor="@android:color/white"
            android:paddingLeft="13dp"
            android:textAllCaps="false"
            android:paddingRight="13dp"
            android:textSize="20sp"
            android:enabled="true"/>

        <Button
            android:enabled="true"
            android:gravity="center"
            android:id="@+id/gallary_pic_btn"
            android:layout_marginTop="24dp"
            android:layout_centerHorizontal="true"
            android:layout_width="210dp"
            android:layout_height="38dp"
            android:text="@string/choose_from_gallary"
            android:background="@drawable/rounded_main_color_button"
            android:paddingTop="-10dp"
            android:paddingBottom="-10dp"
            android:layout_below="@+id/take_pic_btn"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:paddingLeft="13dp"
            android:textAllCaps="false"
            android:paddingRight="13dp"/>


    </RelativeLayout>


</LinearLayout>