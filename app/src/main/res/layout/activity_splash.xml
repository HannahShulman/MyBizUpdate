<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
<RelativeLayout
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mybiz.SplashActivity">



    <ImageView
        android:layout_marginTop="150dp"
        android:layout_width="183.5dp"
        android:layout_height="166.25dp"
        app:srcCompat="@drawable/splash_icon"
        android:id="@+id/splash_image"
        android:layout_centerHorizontal="true"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textStyle="bold"

        android:alpha=".22"
        android:textColor="@android:color/black"
        android:text="@string/app_name"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/splash_image"
        android:layout_marginTop="132.5dp"
        android:id="@+id/app_name"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:alpha=".22"
        android:textColor="@android:color/black"
        android:text="@string/slogen"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/app_name"
        android:layout_marginTop="10.5dp"
        android:id="@+id/app_slogen"/>

</RelativeLayout>



</FrameLayout>
