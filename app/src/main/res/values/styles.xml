<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme_noActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyToolbarStyle" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">#ffffff</item>
        <item name="android:textColorPrimary">#ffffff</item>
    </style>

    <style name="ActionBarTheme" parent="Widget.AppCompat.Toolbar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorControlNormal">?attr/actionBarStyle</item>
        <item name="actionButtonStyle">?attr/actionBarStyle</item>
        <item name="selectableItemBackground">?attr/selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?attr/selectableItemBackground</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>


    <style name="MyThemeNavy" parent="Theme.AppCompat.NoActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="android:textColor">#87000000</item>
        <item name="android:textColorHint">#87000000</item>
        <item name="drawerArrowStyle">@style/Widget.AppCompat.DrawerArrowToggle</item>

    </style>

    <style name="EditTextStyle" parent="MyThemeNavy">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="colorControlActivated">@color/red_create_account</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#87000000</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">
        <item name="actionMenuTextColor">@color/tw__composer_black</item>
        <item name="android:popupBackground">#0b19ba</item>
    </style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>


    <style name="TabLayoutTextStyle" parent="Widget.Design.TabLayout">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="MyMaterialTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="MyMaterialTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyTitleTextApperance" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>


    <style name="myRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="ratingBarStyle">?attr/ratingBarStyleSmall</item>

    </style>


    <style name="CustomRating" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_ratingbar</item>
        <item name="android:numStars">5</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:maxHeight">30dp</item>

    </style>

    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">7.28pt</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="toolbar_margin" parent="Base.ThemeOverlay.AppCompat.Light">
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>


    <style name="TextAppearanceFinish">
        <item name="android:textColor">#fff</item>
    </style>

    <style name="ButtonBar" parent="@android:style/ButtonBar">
        <item name="background">@android:color/transparent</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="ButtonBarButton">
        <item name="android:minHeight">@dimen/list_item_height_small</item>
    </style>

    <style name="beforeRatingBar" parent="Base.Widget.AppCompat.RatingBar.Indicator">

    </style>

    <style name="autoCompleteStyle" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:dropDownSelector">?attr/listChoiceBackgroundIndicator</item>
        <item name="android:popupBackground">@drawable/abc_popup_background_mtrl_mult</item>
        <item name="background">?attr/editTextBackground</item>
        <item name="android:textColor">?attr/editTextColor</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMediumInverse</item>
    </style>

    <style name="mySpinner" parent="Base.Widget.AppCompat.Spinner.Underlined">
        <!-- Color when pressed -->
        <item name="colorAccent">#ffa000</item>
        <!-- Default color for the dropdown arrow and line -->
        <item name="colorControlNormal">#ffc107</item>
    </style>

    <style name="FacebookLoginButton">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="MyEditText" parent="EditTextStyle">
        <item name="android:layout_marginStart">3dp</item>
        <item name="android:layout_marginEnd">3dp</item>
        <item name="paddingStart">3dp</item>
        <item name="paddingEnd">3dp</item>
    </style>


    <style name="TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
    </style>


    <style name="MyCheckBox" parent="Theme.AppCompat.NoActionBar">
        <item name="colorControlNormal">#fff
        </item>   <!-- normal border color change as you wish -->
        <item name="colorControlActivated">#fff</item> <!-- activated color change as you wish -->
        <item name="android:textColor">#FFFF3F3C</item> <!-- checkbox text color -->
    </style>

    <style name="register_progress_bar" parent="Base.Widget.AppCompat.ProgressBar"></style>

    <style name="MyEditTextStyle" parent="EditTextStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">#54000000</item>
    </style>


    <style name="myDialog" parent="Theme.AppCompat.Dialog">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="myAppBarLayoutStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

        <item name="background">@color/tw__transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay15" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">#000</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MyMaterialTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


</resources>
